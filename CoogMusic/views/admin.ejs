<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Admin Dashboard</title>
    <link rel="icon" type="image/x-icon" href="../public/images/favicon.ico">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel="stylesheet" href="../public/stylesheets/admin.css" />

</head>

<body>
    <header>

        <div id="sidebarMenu" class="d-flex flex-column text-white">
            <div class=" d-flex align-items-center justify-content-around flex-column">
                <a href="/" class="logo">
                    <img class="logo" src="../public/images/coogMusic.png" alt="Coog Music logo">
                </a>
                <h2>Admin</h2>
            </div>
            <hr>
            <ul class="nav nav-pills flex-column">
                <li class="nav-item"><a class="nav-link text-white active" aria-current="page" href="/admin">Users</a></li>
                <li><a class="nav-link text-white" href="/songs">Songs</a></li>
                <li><a class="nav-link text-white" href="/admin-playlist">Playlists</a></li>
                <li><a class="nav-link text-white" href="/queries">Run Queries</a></li>
                <li><a class="nav-link text-white" href="/Logout">Log out</a></li>
            </ul>
        </div>
    </header>

    <main>
        <div class="table-menu">
            <div>
                <button type="button" data-bs-toggle="modal" data-bs-target="#myModal"
                class="btn btn-success table-buttons">Create User</button>
                <button type="button" data-bs-toggle="modal" data-bs-target="#myModal"
                class="btn btn-danger table-buttons">Delete User</button>
            </div>
                <button type="button" data-bs-toggle="modal" data-bs-target="#myModal"  
                class="btn query-button text-white table-buttons">Run Query</button>
        </div>

        <div class="modal" id="myModal">
            <div class="modal-dialog">
              <div class="modal-content">
          
                <!-- Modal Header -->
                <div class="modal-header">
                  <h4 class="modal-title">Modal Heading</h4>
                  <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
          
                <!-- Modal body -->
                <div class="modal-body">
                  Modal body..
                </div>
          
                <!-- Modal footer -->
                <div class="modal-footer">
                  <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                </div>
          
              </div>
            </div>
          </div>
        
        <table class="table table-striped table-borderless">
            <thead>
                <tr> 
                    <th scope="col">ID</th>
                    <th scope="col">Role</th>
                    <th scope="col">Handle</th>
                    <th scope="col">Name</th>
                    <th scope="col">Date created</th>

                </tr>
            </thead>
            <tbody>
                <%
                if(users_report.length != 0){
                users_report.forEach(function(user){%>
                    <tr>
                        <td><%=user.user_id%></td>
                        <td><%=user.user_type%></td>
                        <td><%=user.handle%></td>
                        <td><%=user.username%></td>
                        <td><%=user.date_created%></td>
                    </tr>
                <% });} %>
            </tbody>
        </table>


    </main>
      
</body>

</html>
<!DOCTYPE html>
<html lang="en">


  <%
    function pad2(n) {
        return n.length == 2 ? n : "0" + n;
    }

    function length_prettify(song_len) {
        var hour = Math.floor(song_len / 60).toString();

        var min = Math.floor(song_len % 60).toString();
        min = (hour === "0") ? min : pad2(min);

        var sec = pad2(Math.floor(((song_len - Math.floor(song_len)) * 60)).toString());

        return hour === "0" ? `${min}:${sec}` : `${hour}:${min}:${sec}`;
    }
  %>

    <head>
        <meta charset="UTF-8" />
        <title>Coog Music</title>
        <link
            rel="icon"
            type="image/x-icon"
            href="../public/images/favicon.ico"
        />
        <meta name="viewport" content="width=device-width, initial-scale=1" />

        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
            crossorigin="anonymous"
        />
        <link
          rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.2/css/all.min.css"
        />
        <script
            src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
            crossorigin="anonymous"
        ></script>
        <link rel="stylesheet" href="../public/stylesheets/admin.css" />
        <link rel="stylesheet" href="../public/stylesheets/listener.css" />

    </head>

    <body>
        <%- include('loading') %> 

        <header>
            <div id="sidebarMenu" class="d-flex flex-column text-white">
                <div
                    class="d-flex align-items-center justify-content-around flex-column"
                >
                    <a href="/" class="logo">
                        <img
                            class="logo"
                            src="../public/images/coogMusic.png"
                            alt="Coog Music logo"
                        />
                    </a>
                    <h2>Hello, <%=user%></h2>
                </div>
                <hr />
                <ul class="nav nav-pills flex-column">
                    <li>
                        <a
                            class="nav-link text-white active"
                            aria-current="page"
                            href="/musician-tracks"
                            >
                            <i class="fa fa-music"></i>
                            &nbsp;&nbsp;My tracks</a
                        >
                    </li>
                    <li>
                        <a class="nav-link text-white" href="/addtrack"
                            >
                            <i class="fa fa-plus"></i>
                            &nbsp;&nbsp;Upload a track</a
                        >
                    </li>
                    <li>
                        <a class="nav-link text-white" href="/Logout"
                            >
                            <i class="fa fa-arrow-left"></i>
                            &nbsp;&nbsp;Log out</a
                        >
                    </li>
                </ul>
            </div>
        </header>

        <main>
            <table class="table table-striped table-borderless">
                <thead>
                    <tr>
                        <th scope="col">Track Name</th>
                        <th scope="col">Artist</th>
                        <th scope="col">Length</th>
                        <th scope="col">Number of Plays</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    <% if(data.length!=0){ data.forEach(function(track){ let
                    form_id = "delete-song-" + track.song_id; %>
                    <tr>
                        <td><%=track.song_name%></td>
                        <td><%=track.published_by%></td>
                        <td><%=length_prettify(track.length)%></td>
                        <td><%=track.number_of_plays%></td>
                        <td>
                            <!--
                            <form
                                id="<%=form_id%>"
                                action="/edit-song"
                                method="post"
                            >
                                <input
                                    type="hidden"
                                    name="song_id"
                                    value="<%=track.song_id%>"
                                />
                                -->

                                <button
                                    type="submit"
                                    class="btn btn-outline-dark btn-circle open-edit-name-modal"
                                    data-toggle="modal"
                                    data-target="#edit-name-modal"
                                    data-id="<%=track.song_id%>"
                                >
                                    <i class="fa fa-pen"></i>
                                </button>
                            <!-- </form> -->
                        </td>
                        <td>
                            <form
                                id="<%=form_id%>"
                                action="/delete-song"
                                method="post"
                            >
                                <input
                                    type="hidden"
                                    name="song_id"
                                    value="<%=track.song_id%>"
                                />
                                <button
                                    type="submit"
                                    class="btn btn-outline-danger btn-circle"
                                >
                                    <i class="fa fa-minus"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                    <% });} %>
                </tbody>
            </table>

            <div
            class="modal fade"
            id="edit-name-modal"
            tabindex="-1"
            role="dialog"
            aria-labelledby="edit-name-modal-label"
            aria-hidden="true"
            data-backdrop="false"
          >
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <form id="edit-playlist" action="/edit-song" method="post">
                    <div class="modal-body">
                        <input type="hidden" id="track-id" name="track_id" value = "">
                        <input type="text" class="form-control" name="track_name" placeholder="New track name..." value = "" required>
                     </div>

                    <div class="modal-footer">
                        <button type="submit" class="btn btn-outline-success btn-circle">
                            <i class="fa fa-check"></i>
                        </button>
                        <button type="reset" class="btn btn-outline-danger btn-circle" data-dismiss="modal">
                            <i class="fa fa-ban"></i>
                        </button>
                    </div>
                  </form>
                </div>
               </div>
             </div>

        <!-- END EDIT MODAL -->

        </main>

        <script
            src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"
        ></script>
        <script>
            $(window).on("load", function () {
                $("#loading").hide();
            });

            $(function(){
              $(".open-edit-name-modal").click(function(){
                 $('#track-id').val($(this).data('id'));
                 $("#edit-name-modal").modal("show");
              });
            });
        </script>
    </body>
</html>

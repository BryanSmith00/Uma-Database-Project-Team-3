<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Admin Dashboard</title>
    <link rel="icon" type="image/x-icon" href="../public/images/favicon.ico">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js"
        integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT"
        crossorigin="anonymous"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link rel="stylesheet" href="../public/stylesheets/admin.css" />

</head>

<body>
    <%- include('loading') %> 
    <header>

        <!-- Sidebar -->
        <div id="sidebarMenu" class="d-flex flex-column text-white">
            <div class=" d-flex align-items-center justify-content-around flex-column">
                <a href="/" class="logo">
                    <img class="logo" src="../public/images/coogMusic.png" alt="Coog Music logo">
                </a>
                <h2>Admin</h2>
            </div>
            <hr>
            <ul class="nav nav-pills flex-column">
                <li class="nav-item"><a class="nav-link text-white active" aria-current="page" href="/admin">Users</a>
                </li>
                <li><a class="nav-link text-white" href="/songs">Songs</a></li>
                <li><a class="nav-link text-white" href="/admin-playlist">Playlists</a></li>
                <li><a class="nav-link text-white" href="/queries">Run Queries</a></li>
                <li><a class="nav-link text-white" href="/Logout">Log out</a></li>
            </ul>
        </div>
    </header>

    <main>
        <div class="create-user-menu">
            <button type="button" data-bs-toggle="modal" data-bs-target="#createUserModal"
                class="btn create-user-button">
                <img class="create-user-img" src="../public/images/create-user.png">
                <span class="create-user-title">Create User</span>
            </button>
        </div>

        <!-- Create user -->
        <div class="modal coogModals" id="createUserModal" tabindex="-1" aria-labelledby="createUserLabel"
            aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">

                    <div class="modal-header coogModalHeader">
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>

                        <div class="modal-body coogModalBody">
                            <div class="modalContainer">
                                <div class="coogModalTitle"><h4 class="modal-title" id="createUserLabel">Create new user</h4></div>
                                <form id="createUserForm" action="" method="">
                                    <div class="form-group">
                                        <label class="bold" id="handle-label" for="handle">Handle</label>
                                        <input type="text" id="handle" placeholder="Handle"
                                        name="handle" autofocus="autofocus" onfocus="" class="form-control" required>
                                    </div>

                                <div class="form-group">
                                    <label class="bold" id="username" for="username">Username</label>
                                    <input type="username" id="username" placeholder="Your Username" name="username"
                                        class="form-control" required>
                                </div>

                                <div class="form-group">

                                    <label for="userType">Choose User Type</label>

                                    <div className="select">
                                        <select id="userType">
                                            <option value="" disabled selected>Select Type</option>
                                            <option value="Admin">Admin</option>
                                            <option value="Musician">Musician</option>
                                            <option value="Listener">Listener</option>
                                        </select>
                                        <span className="focus"></span>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="bold" id="password" for="password">Password</label>
                                    <input type="password" id="password" placeholder="Password" name="password"
                                        class="form-control" required>
                                </div>
                                <div class="modalButtons">
                                    <button type="button" class="btn btn-primary modalButton createUserButton">Create</button>
                                    <button type="button" class="btn btn-secondary modalButton cancelButton"
                                    data-bs-dismiss="modal">Cancel</button>
                                </div>  

                            </form>
                        </div>
                    </div>

                </div>

            </div>
        </div>

        <!-- Edit User-->
        <div class="modal" id="editUserModal" tabindex="-1" aria-labelledby="editUserLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">

                    <div class="modal-header coogModalHeader">
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>

                    <div class="modal-body coogModalBody">
                        <div class="modalContainer">
                            <div class="coogModalTitle"><h3 class="modal-title" id="editUserLabel">Edit User</h3></div>
                            <form id="editUserForm" action="" method="">
                                <div class="form-group">
                                    <label class="bold" id="handle-label" for="handle">Handle</label>
                                    <input type="text" id="handle" placeholder="Handle"
                                    name="handle" autofocus="autofocus" onfocus="" class="form-control" required>
                                </div>

                            <div class="form-group">
                                <label class="bold" id="username" for="username">Username</label>
                                <input type="username" id="username" placeholder="Your Username" name="username"
                                    class="form-control" required>
                            </div>

                            <div class="form-group">
                                <label for="userType">Choose User Type</label>
                                <div className="select">
                                    <select id="userType">
                                        <option value="" disabled selected>Select Type</option>
                                        <option value="Admin">Admin</option>
                                        <option value="Musician">Musician</option>
                                        <option value="Listener">Listener</option>
                                    </select>
                                    <span className="focus"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="bold" id="password" for="password">Password</label>
                                <input type="password" id="password" placeholder="Password" name="password"
                                    class="form-control" required>
                            </div>
                            <div class="modalButtons">
                                <button type="button" class="btn btn-primary modalButton createUserButton">Save</button>
                                <button type="button" class="btn btn-secondary modalButton cancelButton"
                                data-bs-dismiss="modal">Cancel</button>
                            </div>  

                        </form>
                    </div>
                    </div>
                </div>

            </div>
        </div>


        <!-- User Details-->
        <div class="modal" id="userDetailsModal" tabindex="-1" aria-labelledby="userDetailsLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">

                    <div class="modal-header coogModalHeader">
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>

                    <div class="modal-body coogModalBody">
                        <div class="modalContainer">
                            <div class="coogModalTitle"><h3 class="modal-title" id="editUserLabel">User Details</h3></div>
                            <form id="userDetails" action="" method="">
                                <div class="form-group">
                                    <label class="bold" id="handle-label" for="handle">Handle</label>
                                    <input type="text" id="handle" placeholder="Handle"
                                    name="handle" autofocus="autofocus" onfocus="" class="form-control" required>
                                </div>

                            <div class="form-group">
                                <label class="bold" id="username" for="username">Username</label>
                                <input type="username" id="username" placeholder="Your Username" name="username"
                                    class="form-control" required>
                            </div>

                            <div class="form-group">
                                <label for="userType">Choose User Type</label>
                                <div className="select">
                                    <select id="userType">
                                        <option value="" disabled selected>Select Type</option>
                                        <option value="Admin">Admin</option>
                                        <option value="Musician">Musician</option>
                                        <option value="Listener">Listener</option>
                                    </select>
                                    <span className="focus"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="bold" id="password" for="password">Password</label>
                                <input type="password" id="password" placeholder="Password" name="password"
                                    class="form-control" required>
                            </div>
                            <div class="modalButtons">
                                <button type="button" class="btn btn-primary modalButton createUserButton">Save</button>
                                <button type="button" class="btn btn-secondary modalButton cancelButton"
                                data-bs-dismiss="modal">Cancel</button>
                            </div>  

                        </form>
                    </div>
                    </div>
                </div>
            </div>

        

        <!-- Users table-->
        <table class="table table-striped table-borderless">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Role</th>
                    <!--<th scope="col">Handle</th>-->
                    <th scope="col">Name</th>
                    <th scope="col">Date created</th>
                    <th scope="col">Action</th>

                </tr>
            </thead>
            <tbody>
                <% if(users_report.length !=0){ users_report.forEach(function(user){%>
                    <tr>
                        <td>
                            <%=user.user_id%>
                        </td>
                        <td>
                            <%=user.user_type%>
                        </td>
                        <!--<td>
                            <%=user.handle%>
                        </td>-->
                        <td>
                            <%=user.username%>
                        </td>
                        <td>
                            <%=user.date_created%>
                        </td>
                        <td>
                            <div class="buttons-row">
                            <button type="button" data-bs-toggle="modal" data-bs-target="#editUserModal"
                            class="btn query-button text-white table-buttons">Edit</button>
                            <button type="button" data-bs-toggle="modal" data-bs-target="#userDetailsModal"
                            class="btn btn-warning text-white table-buttons">Details</button>
                            <button type="button" data-bs-toggle="modal" data-bs-target="#deleteUserModal"
                            class="btn btn-danger table-buttons">Delete</button>
                            </div>
                        </td>
                    </tr>
                    <% });} %>
            </tbody>
        </table>


    </main>
    <script>
         $(window).on("load", function () {
                $("#loading").hide();
            });
    </script>
    <script>src = "modals.ejs"</script>

</body>

</html>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Admin Dashboard</title>
    <link rel="icon" type="image/x-icon" href="../public/images/favicon.ico">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.2/css/all.min.css"/>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js"
        integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT"
        crossorigin="anonymous"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link rel="stylesheet" href="../public/stylesheets/admin.css" />

</head>

<body>
    <%- include('loading') %> 
    <header>

        <!-- Sidebar -->
        <div id="sidebarMenu" class="d-flex flex-column text-white">
            <div class=" d-flex align-items-center justify-content-around flex-column">
                <a href="/" class="logo">
                    <img class="logo" src="../public/images/coogMusic.png" alt="Coog Music logo">
                </a>
                <h2>Hello, Admin</h2>
            </div>
            <hr>
            <ul class="nav nav-pills flex-column">
                <li class="nav-item">
                    <a class="nav-link text-white" href="/admin"><i class="fa fa-users"></i>
                        &nbsp;&nbsp;Users</a>
                </li>
                <li>
                    <a class="nav-link text-white" href="/songs"><i class="fa fa-music"></i>
                        &nbsp;&nbsp;Songs</a>
                </li>
                <li>
                    <a class="nav-link text-white" href="/admin-playlist"><i class="fa fa-bars"></i>
                        &nbsp;&nbsp;Playlists</a>
                </li>
                <li>
                    <a class="nav-link text-white active" href="/reports"><i class="fa fa-chart-bar"></i>
                        &nbsp;&nbsp;Reports</a>
                </li>
                <li>
                    <a class="nav-link text-white" href="/queries"><i class="fa fa-ellipsis-h"></i>
                        &nbsp;&nbsp;Queries</a>
                </li>
                <li>
                    <a class="nav-link text-white" href="/Logout"><i class="fa fa-arrow-left"></i>
                        &nbsp;&nbsp;Log out</a>
                </li>
            </ul>
        </div>
    </header>

    <main>

        <!-- Users Activity report -->
        <table class="table table-hover table-striped table-borderless playlist-table caption-top">
            <caption class="admin-caption">
                Media added
            </caption>
            <thead>
                <tr>
                    <th scope="col">Tracks</th>
                    <th scope="col">Total track length</th>
                    <th scope="col">Playlist</th>
                    <th scope="col">Total playlist length</th>
                </tr>
            </thead>
            <tbody>

                
                <% if(media_report.length!=0){

                    media_report.forEach(function(track){
                        media_report.forEach(function(playlist){

                %>
                <tr>
                    <td><%=track.total_tracks%></td>
                    <td ><%=track.total_tracks_length%></th>
                    <td><%=playlist.total_playlists%></td>
                    <td ><%=playlist.total_playlists_length%></th>
                </tr>
                <% });} );} else { %>
                    <tr>
                        <th scope="row" colspan="4">There were no media added during this timeframe.</th>
                    </tr>
                    <% } %>
                </tbody>
        </table>
    </main>
    <script>
        $(window).on("load", function () {
            $("#loading").hide();
        });
    </script>
</body>
</html>
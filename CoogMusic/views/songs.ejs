<!DOCTYPE html>

<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>Songs</title>
        <link
            rel="icon"
            type="image/x-icon"
            href="../public/images/favicon.ico"
        />
        <meta name="viewport" content="width=device-width, initial-scale=1" />

        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
            crossorigin="anonymous"
        />
        <script
            src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
            crossorigin="anonymous"
        ></script>
        <link rel="stylesheet" href="../public/stylesheets/admin.css" />

        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
            crossorigin="anonymous"
        />
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js"
            integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT"
            crossorigin="anonymous"
        ></script>

        <link rel="stylesheet" href="../public/stylesheets/admin.css" />
    </head>

    <body>
        <%- include('loading') %>
        <header>
            <div id="sidebarMenu" class="d-flex flex-column text-white">
                <div
                    class="d-flex align-items-center justify-content-around flex-column"
                >
                    <a href="/" class="logo">
                        <img
                            class="logo"
                            src="../public/images/coogMusic.png"
                            alt="Coog Music logo"
                        />
                    </a>
                    <h2>Admin</h2>
                </div>
                <hr />
                <ul class="nav nav-pills flex-column">
                    <li class="nav-item">
                        <a
                            class="nav-link text-white"
                            aria-current="page"
                            href="/admin"
                            >Users</a
                        >
                    </li>
                    <li>
                        <a class="nav-link text-white active" href="/songs">Songs</a>
                    </li>
                    <li>
                        <a class="nav-link text-white" href="/admin-playlist"
                            >Playlists</a
                        >
                    </li>
                    <li>
                        <a class="nav-link text-white" href="/queries"
                            >Run Queries</a
                        >
                    </li>
                    <li>
                        <a class="nav-link text-white" href="/Logout"
                            >Log out</a
                        >
                    </li>
                </ul>
            </div>
        </header>

        <main>
            <!-- Songs table -->
            <table class="table table-dark table-hover table-striped table-borderless listener-table">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Title</th>
                        <th scope="col">Artist</th>
                        <th scope="col">Number of plays</th>
                        <th scope="col">Release Date</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% if(songs_report.length!=0){ songs_report.forEach(function(track){ let
                        form_id = "delete-song-" + track.song_id; %>
                    <tr>
                        <td><%=track.song_id%></td>
                        <td><%=track.song_name%></td>
                        <td><%=track.published_by%></td>
                        <td><%=track.number_of_plays%></td>
                        <td><%=track.date_added%></td>
                        <td>
                            <div class="buttons-row">
                                <button
                                    type="submit"
                                    class="btn btn-outline-warning btn-circle open-edit-name-modal"
                                    data-toggle="modal"
                                    data-target="#edit-name-modal"
                                    data-id="<%=track.song_id%>"
                                >
                                Edit
                                    <i class="fa fa-pen"></i>
                                </button>
                                <form
                                id="<%=form_id%>"
                                action="/delete-song-admin"
                                method="post"
                            >
                                <input
                                    type="hidden"
                                    name="song_id"
                                    value="<%=track.song_id%>"
                                />
                                <button
                                    type="submit"
                                    class="btn btn-outline-danger btn-circle"
                                >
                                Delete
                                </button>
                            </form>
                            </div>
                        </td>
                        
                    </tr>
                    <% });} %>
                </tbody>
            </table>

            <!-- Edit Song Modal -->
            <div
            class="modal fade"
            id="edit-name-modal"
            tabindex="-1"
            role="dialog"
            aria-labelledby="edit-name-modal-label"
            aria-hidden="true"
            data-backdrop="false"
          >
          <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header coogModalHeader">
                    <button
                        type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                    ></button>
                </div>

                <div class="modal-body coogModalBody">
                    <div class="modalContainer">
                        <div class="coogModalTitle">
                            <h3 class="modal-title" id="editSongLabel">
                                Edit Song
                            </h3>
                        </div>
                        <form id="edit-playlist" action="/edit-song-admin" method="post">

                            <div class="form-group">
                                <input type="hidden" id="track-id" name="track_id" value = "">
                            </div>

                            <div class="form-group">
                                <label class="bold" id="track_name" for="track_name">New title</label>
                                <input type="text" class="form-control" name="track_name" placeholder="New title" value = "" required>
                            </div>

                            <div class="form-group">
                                <label class="bold" id="number_of_plays" for="number_of_plays">New number of plays</label>
                                <input type="text" class="form-control" name="number_of_plays" placeholder="New number of plays" value = "" required>
                            </div>

                            <div class="form-group">
                                <label class="bold" id="date_added" for="date_added">New release date</label>
                                <input type="text" class="form-control" name="date_added" placeholder="New release date" value = "" required>
                            </div>
        
                            <div class="modalButtons">
                                <button
                                    type="button"
                                    class="btn btn-primary modalButton createUserButton"
                                >
                                    Save
                                </button>
                                <button
                                    type="button"
                                    class="btn btn-secondary modalButton cancelButton"
                                    data-bs-dismiss="modal"
                                >
                                    Cancel
                                </button>
        
                          </form>
                    </div>
                </div>
            </div>
        </div>

        </main>

        <script src="../public/js/modals.js"></script>

        <script>
            $(window).on("load", function () {
                $("#loading").hide();
            });

            $(function(){
              $(".open-edit-name-modal").click(function(){
                 $('#track-id').val($(this).data('id'));
                 $("#edit-name-modal").modal("show");
              });
            });
        </script>
    </body>
</html>

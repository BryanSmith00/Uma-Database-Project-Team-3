<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>Playlists</title>
        <link
            rel="icon"
            type="image/x-icon"
            href="../public/images/favicon.ico"
        />
        <meta name="viewport" content="width=device-width, initial-scale=1" />

        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
            crossorigin="anonymous"
        />

        <link rel="stylesheet" href="../public/stylesheets/admin.css" />
    </head>

    <body>
        <header>
            <div id="sidebarMenu" class="d-flex flex-column text-white">
                <div
                    class="d-flex align-items-center justify-content-around flex-column"
                >
                    <a href="/" class="logo">
                        <img
                            class="logo"
                            src="../public/images/coogMusic.png"
                            alt="Coog Music logo"
                        />
                    </a>
                    <h2><%=user%></h2>
                </div>
                <hr />
                <ul class="nav nav-pills flex-column">
                    <li class="nav-item">
                        <a
                            class="nav-link text-white"
                            aria-current="page"
                            href="/listener"
                            >Library</a
                        >
                    </li>
                    <li>
                        <a
                            class="nav-link text-white active"
                            href="/my-playlists"
                            >Playlists</a
                        >
                    </li>
                    <li>
                        <a class="nav-link text-white" href="/music"
                            >Music Player</a
                        >
                    </li>
                    <li>
                        <a class="nav-link text-white" href="/Logout"
                            >Log out</a
                        >
                    </li>
                </ul>
            </div>
        </header>

        <main>
            <div class="playlist-container">
                <!-- Your Playlists -->
                <table class="table table-dark table-striped table-borderless caption-top">
                    <caption>
                        Your Playlists
                    </caption>
                    <thead>
                        <tr>
                            <th scope="col">Playlist Name</th>
                            <th scope="col">Length</th>
                            <th scope="col"></th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(my_pls.length!=0){
                        my_pls.forEach(function(playlist){ 
                        let pl_form_id = "delete-playlist-" + playlist.playlist_ID;
                        %>
                        <tr>
                            <th scope="row"><%=playlist.playlist_name%></th>
                            <td><%=playlist.full_length%></td>
                            <td>
                                <button
                                    type="button"
                                    class="btn btn-outline-success"
                                >
                                    Open
                                </button>
                            </td>
                            <td>
                                <form id="<%=pl_form_id%>" action="/delete-playlist" method="post">
                                    <input type="hidden" name="playlist_id" value="<%=playlist.playlist_ID%>">
                                    <input type="submit" class="btn btn-outline-danger" value="Delete">
                                </form>
                            </td>
                        </tr>
                        <% });} else { %>
                        <tr>
                            <th scope="row" colspan="4">
                                You have no playlists.
                            </th>
                        </tr>
                        <% } %>

                        <form
                            id="new-playlist"
                            method="post"
                            action="/my-playlists"
                        >
                            <tr>
                                <th scope="row" colspan="2">
                                    <input
                                        type="text"
                                        id="playlistname"
                                        placeholder="My new playlist..."
                                        name="playlistname"
                                        class="form-control"
                                        required
                                    />
                                </th>
                                <th colspan="2">
                                    <button
                                        type="submit"
                                        id="submit"
                                        class="btn btn-outline-success"
                                    >
                                        Create New Playlist
                                    </button>
                                </th>
                            </tr>
                        </form>
                    </tbody>
                </table>
            </div>
            <!-- Playlist Library -->
            <table class="table table-dark table-striped table-borderless caption-top">
                <caption>
                    Playlist Library
                </caption>
                <thead>
                    <tr>
                        <th scope="col">Playlist Name</th>
                        <th scope="col">Playlist Creator</th>
                        <th scope="col">Length</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    <% if(other_pls.length!=0){
                    other_pls.forEach(function(playlist){ %>
                    <tr>
                        <th scope="row"><%=playlist.playlist_name%></th>
                        <td><%=playlist.user_username%></td>
                        <td><%=playlist.full_length%></td>
                        <td>
                            <button
                                type="button"
                                class="btn btn-outline-success"
                            >
                                Open
                            </button>
                        </td>
                    </tr>
                    <% });} else { %>
                    <tr>
                        <th scope="row" colspan="4">There are no playlists.</th>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </main>
    </body>
</html>

<!doctype html>

<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Login - Coog Music</title>
  <link rel="icon" type="image/x-icon" href="../public/images/favicon.ico">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <%- include('header') %> 
  <link rel="stylesheet" href="../public/stylesheets/login.css"/>
</head>

<body>

  <%- include('navbar', {user_type: null}) %> 
  
  <div class="container">

    
  <form id="login" action="/login" method="post">
      <h3> Login </h3>
      <div class="form-group">
        <label class="bold" id="username-label" for="username">Email address or username</label>
        <input type="text" id="username" placeholder="Email address or username" name="username" autofocus="autofocus" onfocus="this.select()" class="form-control"required>
      </div>

      <div class="form-group">
        <label class="bold" id="password" for="password">Password</label>
        <input type="password" id="password" placeholder="Password" name="password" class="form-control" required>
      </div>

      <div class="form-group">
        <label>
          <input type="checkbox" checked="checked" name="remember" class="input-checkbox" value="remember"> 
          Remember me</label>
      </div>

      <div class="form-group">
        <button type="submit" id="submit" class="input-submit">LOG IN</button>
      </div>

  </form>
</div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" 
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</body>
</html>
<!doctype html>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Create Playlist - Coog Music</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%- include('header') %> 
</head>
<body>

    <div class="container">

        <form id="create-playlist" action="/createplaylist" method="post">
            <h3> Create Playlist </h3>
            <div class="form-group">
                <label class="bold" id="plname-label" for="plname">Playlist Name</label>
                <input type="text" id="plname" placeholder="Enter a name for your playlist." name="plname" class="form-control" required>
            </div>

            <div class="form-group">
                <button type="submit" id="submit" class="input-submit">Create</button>
            </div>

        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</body>
</html>